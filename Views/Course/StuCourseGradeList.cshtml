
@{
    ViewBag.Title = "StuCourseGradeList";
}

@section title { Student's Course Grades Panel }
@section breadcrumb{ <a href="/Course/StuCourseGradeList">Student's Course Grades List Panel</a>}

@model List<StundetInformation.Models.StudentGrade>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        @{
                            int studentID = ViewBag.StudentID;
                            StudentInformationContext db = new StudentInformationContext();
                            var student = db.Student.FirstOrDefault(x => x.id == studentID);
                            var studentName = student.firstName + " " + student.lastName;
                            <h3 class="float-left">@studentName's Courses</h3>
                        }
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="coursesList" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Grade</th>
                                    <th>Grade Weight</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var grade in Model)
                                {
                                    <tr>
                                        <td>@grade.Student.firstName @grade.Student.lastName</td>
                                        <td>@grade.gradeValue</td>
                                        <td>@grade.gradeWeight</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Grade</th>
                                    <th>Grade Weight</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
