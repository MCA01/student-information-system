@{
    ViewBag.Title = "Departments Panel";
}

@model List<StundetInformation.Models.Department>

@section title { Departments Panel }
@section breadcrumb{ <a href="/Department/DepartmentIndex">DepartmentsPanel</a>}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary float-right ml-3 mr-3" href="/Department/AddDepartment/@Model[0].facultyID" role="button">Add Department</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="departmentsList" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var academicUnit in Model)
                                {

                                    <tr>
                                        <td>@academicUnit.name</td>
                                        <td>
                                            <a href="/Department/EditDepartment/@academicUnit.id"><i class="fa-solid fa-pen-to-square ml-3 mr-3"></i></a>
                                            <a href="/Department/RemoveDepartment/@academicUnit.id"><i class="fa-solid fa-trash ml-3 mr-3"></i></a>
                                        </td>
                                    </tr>



                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

