@{
    ViewBag.Title = "Faculties Panel";
}

@section title { Faculties Panel }
@section breadcrumb{ <a href="/Department/Index">FacultiesPanel</a>}

@model List<StundetInformation.Models.Department>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary float-right ml-3 mr-3" href="/Department/AddFaculty" role="button">Add Faculty</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="facultiesList" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var academicUnit in Model)
                                {
                                    if (academicUnit.facultyID == 0)
                                    {
                                        <tr>
                                            <td>@academicUnit.name</td>
                                            <td>
                                                <a href="/Department/DepartmentIndex/@academicUnit.id"><i class="fa-solid fa-list ml-3 mr-3"></i></a>
                                                <a href="/Department/EditFaculty/@academicUnit.id"><i class="fa-solid fa-pen-to-square ml-3 mr-3"></i></a>
                                                <a href="/Department/RemoveFaculty/@academicUnit.id"><i class="fa-solid fa-trash ml-3 mr-3"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

