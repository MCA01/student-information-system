@{
    ViewBag.Title = "EnrollsPanel";
}

@section title { Enrolls Panel }
@section breadcrumb{ <a href="/Enroll/Index">EnrollsPanel</a>}

@model List<StundetInformation.Models.Enrolls>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary float-right" href="/Enroll/Add" role="button">Add Enrollment</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="coursesList" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Student ID</th>
                                    <th>Course Name</th>
                                    <th>Course Code</th>
                                    <th>Course ID</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var enroll in Model)
                                {
                                    <tr>
                                        <td>@enroll.Student.firstName @enroll.Student.lastName</td>
                                        <td>@enroll.studentID</td>
                                        <td>@enroll.Course.courseName</td>
                                        <td>@enroll.Course.courseCode</td>
                                        <td>@enroll.courseID</td>
                                        <td>@enroll.status</td>
                                        <td>
                                            <a href="/Enroll/Edit/@enroll.id"><i class="fa-solid fa-pen-to-square mr-3"></i></a>
                                            <a href="/Enroll/Remove/@enroll.id"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Student ID</th>
                                    <th>Course Name</th>
                                    <th>Course Code</th>
                                    <th>Course ID</th>
                                    <th>Status</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

