
@{
    ViewBag.Title = "EditGradeFromStudent";
}

@section title { Edit Grade from Student }
@section breadcrumb{ <a href="/StudentGrade/EditGradeFromStudent">Edit</a>}

@model StundetInformation.Models.StudentGrade


<!-- general form elements -->
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"></h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("EditGradeFromStudent", "StudentGrade", FormMethod.Post))
    {
        <div class="card-body">
            <div class="form-group m-auto">
                <label for="exampleInputEmail1">Student</label>
                @Html.DropDownListFor(m => m.courseID, ViewBag.CourseList as SelectList, "Select", new { @class = "custom-select" })
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Grade</label>
                <input type="number" class="form-control" name="gradeValue" value=@Model.gradeValue>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Grade Weight</label>
                <input type="number" class="form-control" name="gradeWeight" min="0" max="10" value=@Model.gradeWeight>
            </div>

            @Html.HiddenFor(x => x.studentID)

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary" id="studFormSubmit">Submit</button>
        </div>
    }

</div>
<!-- /.card -->
