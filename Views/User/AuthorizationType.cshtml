
@{
    ViewBag.Title = "AuthorizationType";
}

@section title { Authorization Type }
@section breadcrumb{ <a href="/User/AuthorizationType">Authorization Type</a>}

@model List<StundetInformation.Models.AuthorizationType>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary float-right" href="/User/AddAuthorizationType" role="button">Add Authorization Type</a>
                    </div>
                    <div class="card-body">
                        <table id="authorizationList" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Authorization Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var authType in Model)
                                {
                                    <tr>
                                        <td>@authType.type</td>
                                        <td>
                                            <a href="/User/RemoveAuthorizationType/@authType.id"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Authorization Type</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
    </div>
</section>