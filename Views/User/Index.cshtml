
@{
    ViewBag.Title = "Users Panel";
}

@section title { Users Panel }
@section breadcrumb{ <a href="/User/Index">UsersPanel</a>}

@model List<StundetInformation.Models.User>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary float-right" href="/User/Add" role="button">Add User</a>
                        <a class="btn btn-primary float-right mr-3" href="/User/Authorization" role="button">Set Authorization</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="usersList" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Date of Birth</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Hire Date</th>
                                    <th>Department</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.firstName @user.lastName</td>
                                        <td>@user.gender</td>
                                        <td>@user.dateOfBirth</td>
                                        <td>@user.phone</td>
                                        <td>@user.email</td>
                                        <td>@user.hireDate</td>
                                        <td>@user.Department.name</td>
                                        <td>
                                            <a href="/User/Edit/@user.id"><i class="fa-solid fa-pen-to-square mr-3"></i></a>
                                            <a href="/User/Remove/@user.id"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Date of Birth</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Hire Date</th>
                                    <th>Department</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

